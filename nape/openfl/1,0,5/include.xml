<?xml version="1.0" encoding="utf-8"?>
<extension>
	
	<section if="display">
		
		<include haxelib="openfl-native" if="android" unless="custom-android-backend" />
		<include haxelib="openfl-native" if="blackberry" unless="custom-blackberry-backend" />
		<include haxelib="openfl-native" if="emscripten" unless="custom-emscripten-backend" />
		<include haxelib="openfl-native" if="ios" unless="custom-ios-backend" />
		<include haxelib="openfl-native" if="linux" unless="custom-linux-backend" />
		<include haxelib="openfl-native" if="mac" unless="custom-mac-backend" />
		<include haxelib="openfl-native" if="windows" unless="custom-windows-backend" />
		
		<include haxelib="openfl-html5" if="html5" unless="custom-html5-backend" />
		
	</section>
	
	<section unless="display">
		
		<haxelib name="openfl-native" if="android" unless="custom-android-backend" />
		<haxelib name="openfl-native" if="blackberry" unless="custom-blackberry-backend" />
		<haxelib name="openfl-native" if="emscripten" unless="custom-emscripten-backend" />
		<haxelib name="openfl-native" if="ios" unless="custom-ios-backend" />
		<haxelib name="openfl-native" if="linux" unless="custom-linux-backend" />
		<haxelib name="openfl-native" if="mac" unless="custom-mac-backend" />
		<haxelib name="openfl-native" if="windows" unless="custom-windows-backend" />
		
		<haxelib name="openfl-html5" if="html5" unless="custom-html5-backend" />
		
	</section>
	
	<include haxelib="openfl-tools" />
	<template path="templates" />
	
</extension>